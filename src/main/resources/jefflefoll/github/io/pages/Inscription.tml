<html t:type="layout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<div class="page-header">
    <h1>${mesage:titreInscription}</h1>
</div>

<form class="form-horizontal">
    <div class="form-group">
        <label for="saisieNom" class="col-sm-2 control-label">${message:nom}</label>

        <div class="col-sm-6">
            <input type="text" class="form-control" id="saisieNom" placeholder="${message:nom}" required="true" autofocus="true"/>
        </div>
    </div>

    <div class="form-group">
        <label for="saisiePrénom" class="col-sm-2 control-label">${message:prénom}</label>

        <div class="col-sm-6">
            <input type="text" class="form-control" id="saisiePrénom" placeholder="${message:prénom}" required="true"/>
        </div>
    </div>

    <div class="form-group">
        <label for="saisieVille" class="col-sm-2 control-label">${message:ville}</label>

        <div class="col-sm-6">
            <input type="text" class="form-control" id="saisieVille" placeholder="${message:ville}" required="true"/>
        </div>
    </div>

    <div class="form-group">
        <label for="saisieMail" class="col-sm-2 control-label">${message:email}</label>

        <div class="col-sm-6">
            <input type="email" class="form-control" id="saisieMail" placeholder="${message:email}" required="true"/>
        </div>
    </div>

    <div class="form-group">
        <label for="saisieMdP" class="col-sm-2 control-label">${message:motDePasse}</label>

        <div class="col-sm-6">
            <input type="password" class="form-control" id="saisieMdP" placeholder="${message:motDePasse}" required="true"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-danger">${message:creerCompte}</button>
        </div>
    </div>
</form>

</html>
