<html t:type="layout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">


<div class="row">
    <div class="col-sm-11 col-sm-offset-1">
        <h1 class="page-header">Dashboard</h1>

        <div class="row">
            <div class="col-sm-3">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Mes informations</h3>
                    </div>
                    <div class="panel-body">
                        <b>Nom :</b> Deckard
                        <br/><b>Prénom :</b> Rick
                        <br/><b>Ville :</b> San Francisco
                    </div>
                </div>
            </div>

            <div class="col-sm-4"></div>

            <div class="col-sm-5">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Répartition des commandes</h3>
                    </div>
                    <div class="panel-body">
                        <div id="chart"></div>
                        <script>
                            var chart = c3.generate({
                                bindto: '#chart',
                                data: {
                                  columns: [
                                    ['Sabre laser', 30, 200, 100, 400, 150, 250],
                                    ['Tondeuse à gazon', 10, 150, 34],
                                    ['Pied de biche', 1, 350, 42],
                                    ['Nuke-Cola x6', 50, 20, 10, 40, 15, 25]
                                  ],
                                  type : 'pie'
                                }
                            });

                            </script>
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>


</html>
