<html t:type="layout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">


<div class="page-header">
    <h1>Ceci est un formulaire de contact</h1>
</div>

<form class="form-horizontal">
    <div class="form-group">
        <label for="saisieNom" class="col-sm-2 control-label">Nom</label>

        <div class="col-sm-8">
            <input type="text" class="form-control" id="saisieNom" placeholder="Nom" required="true" autofocus="true"/>
        </div>
    </div>

    <div class="form-group">
        <label for="saisieMail" class="col-sm-2 control-label">Email</label>

        <div class="col-sm-8">
            <input type="email" class="form-control" id="saisieMail" placeholder="email" required="true"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox" required="true"/> Je suis un humain et non un robot
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
            <div class="dropdown">
                <select class="form-control" required="true">
                    <option value="" disabled="true">Catégories</option>
                    <option value="Commande"> Commande</option>
                    <option value="Expédition">Expédition</option>
                    <option value="Conseils">Conseils</option>
                    <option value="Recrutement">Recrutement</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="question" class="col-sm-2 control-label">Question</label>

        <div class="col-sm-8">
            <textarea class="form-control" id="question" rows="6"></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Envoyer</button>
            <button type="reset" class="btn btn-warning">Annuler</button>
        </div>
    </div>
</form>

</html>
